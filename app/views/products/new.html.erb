<h1>New pet</h1>

<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :stock %>
    <%= text_field_tag :stock %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
    <%= submit_tag 'Add your pet!' %>
<% end %>




